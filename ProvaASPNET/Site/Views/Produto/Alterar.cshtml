@{
    Layout = null;
}


<div ng-controller="produtoController" ng-init="AlterarInit()" class="margin-top-40">
    <div class="container">
        <div class="row">
            <div class="col">
                <form>
                    <div class="form-group">
                        <label>Código</label>
                        <input type="text" class="form-control" ng-model="Produto.Codigo" readonly="readonly" placeholder="Digite o código">
                    </div>
                    <div class="form-group">
                        <label>Código de barras</label>
                        <input type="text" class="form-control" ng-model="Produto.CodigoBarra" readonly="readonly" placeholder="Digite o código de barras">
                    </div>
                    <div class="form-group">
                        <label>Descrição</label>
                        <textarea class="form-control" ng-model="Produto.Descricao" placeholder="Digite a descrição"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Valor de venda</label>
                        <input type="number" min="1" step="any" class="form-control" ng-model="Produto.ValorVenda" placeholder="Digite o valor de venda">
                    </div>

                    <button ng-click="Alterar()" class="btn btn-primary">Enviar</button>

                </form>
            </div>
        </div>
    </div>
</div>