@{
    Layout = null;
}


<div ng-controller="clienteController" ng-init="AlterarInit()" class="margin-top-40">
    <div class="container">
        <div class="row">
            <div class="col">
                <form>
                    <div class="form-group">
                        <label>Código</label>
                        <input type="text" class="form-control" ng-model="Cliente.Codigo" readonly="readonly" placeholder="Digite o código">
                    </div>
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control" ng-model="Cliente.Nome" placeholder="Digite o nome">
                    </div>
                    <div class="form-group">
                        <label>CPF</label>
                        <input type="text" class="form-control cpf" ng-model="Cliente.Cpf" readonly="readonly" placeholder="Digite o cpf">
                    </div>

                    <div class="form-group">
                        <label>Data de nascimento</label>
                        <input type="text" class="form-control date" ng-model="Cliente.DataNascimento" placeholder="Digite a data de nascimento">
                    </div>

                    <button ng-click="Alterar()" class="btn btn-primary">Alterar</button>

                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.date').mask("00/00/0000");
    });
</script>